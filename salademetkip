        function voegMeerKipToe() {
            let kipImg = document.createElement("img");
            kipImg.src = "https://th.bing.com/th/id/OIP.8iLVyVDaePRtm8ryNhLkHQHaEo?w=248&h=180&c=7&r=0&o=5&dpr=1.4&pid=1.7" alt="Salade">
